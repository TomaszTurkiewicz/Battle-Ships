<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/redDotMultiplayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/red_dot"
        app:layout_constraintTop_toTopOf="@id/multiplayer"
        app:layout_constraintEnd_toEndOf="@id/multiplayer"
        android:elevation="3dp"/>
    <Button
        android:id="@+id/randomGame"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:onClick="randomGame"
        android:text="@string/random_game"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintVertical_bias="0.33"/>

    <Button
        android:id="@+id/notRandomGame"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:onClick="notRandomGame"
        android:text="@string/not_random_game"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintVertical_bias="0.66"/>

    <Button
        android:id="@+id/multiplayer"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="@string/multiplayer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.75"
        app:layout_constraintVertical_bias="0.5"/>

    <ImageButton
        android:id="@+id/accountButton"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:onClick="onClickSignIn"
        android:src="@drawable/account"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="@dimen/FieldSize"/>

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/loggedIn"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/FieldSize"/>

    <TextView
        android:id="@+id/loggedIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/FieldSize"
        android:layout_marginLeft="@dimen/FieldSize"/>


    <Button
        android:id="@+id/ranking"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:onClick="ranking"
        android:text="@string/ranking"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/FieldSize"/>


</androidx.constraintlayout.widget.ConstraintLayout>