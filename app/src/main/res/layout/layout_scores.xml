<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="#00000000"
    android:id="@+id/parent_layout">

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/positionScore"
        android:textSize="@dimen/TextSize"
        android:textColor="@color/pen"
        android:background="#00000000"
        android:gravity="center_vertical|right"
        android:layout_gravity="center"
        android:layout_weight="@integer/PositionWeight"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@integer/UserWeight"
        android:background="#00000000">

        <ImageView
            android:id="@+id/photoScore"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:id="@+id/usernameScore"
            android:textSize="@dimen/TextSize"
            android:textColor="@color/pen"
            android:gravity="center_vertical|left"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/FieldSize"
            android:background="#00000000"/>

    </LinearLayout>




    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/noOfGamesScore"
        android:textSize="@dimen/TextSize"
        android:textColor="@color/pen"
        android:background="#00000000"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="@integer/NoOFGamesWeight"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/scoreScore"
        android:textSize="@dimen/TextSize"
        android:textColor="@color/pen"
        android:background="#00000000"
        android:layout_weight="@integer/ScoreWeight"
        android:gravity="center"
        android:layout_gravity="center"/>

</LinearLayout>