<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity"
    android:id="@+id/settingsActivityLayout">

    <ImageView
        android:id="@+id/photo_settings_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>


    <ImageButton
        android:id="@+id/leaveSettingsActivity"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:onClick="leaveSettingsActivityOnClick"
        android:background="#00000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="0dp"/>

    <TextView
        android:id="@+id/userNameSettingsActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/pen"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:gravity="center"
        android:includeFontPadding="false"/>

    <EditText
        android:id="@+id/newUserNameSettingsActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="new name..."
        android:textColor="@color/pen"
        android:background="@drawable/button_background_pen"
        android:layout_gravity="center"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:inputType="text" />

    <Button
        android:id="@+id/saveNewNameSettingsActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="SAVE"
        android:background="@drawable/button_background_pen"
        android:textColor="@color/pen"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="0dp"
        android:padding="0dp"/>

    <ImageView
        android:id="@+id/new_photo_settings_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00000000"
        android:scaleType="fitXY"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <Button
        android:id="@+id/chooseNewPhotoSettingsActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="NEW PHOTO"
        android:background="@drawable/button_background_pen"
        android:textColor="@color/pen"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="0dp"
        android:padding="0dp"/>

    <Button
        android:id="@+id/uploadNewPhotoSettingsActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="UPLOAD"
        android:background="@drawable/button_background_pen_red"
        android:textColor="@color/pen_red"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="0dp"
        android:padding="0dp"/>

    <CheckBox
        android:id="@+id/checkbox_fb_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SYNC FB PHOTO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/button_background_pen"
        android:textColor="@color/pen"
        android:buttonTint="@color/pen"
        android:paddingHorizontal="@dimen/FieldSize"/>

    <CheckBox
        android:id="@+id/checkbox_fb_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SYNC FB NAME"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@drawable/button_background_pen"
        android:textColor="@color/pen"
        android:buttonTint="@color/pen"
        android:paddingHorizontal="@dimen/FieldSize"/>


</androidx.constraintlayout.widget.ConstraintLayout>