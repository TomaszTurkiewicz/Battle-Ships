<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle" >
            <!-- View background color -->
            <solid
                android:color="@color/WHITE" >
            </solid>
            <!-- View border color and width -->
            <stroke
                android:width="1dp"
                android:color="@color/pen_light" >
            </stroke>
            <!-- The radius makes the corners rounded -->
            <corners
                android:radius="0dp"   >
            </corners>
        </shape>
    </item>
    <item>
        <rotate
            android:fromDegrees="135"
            android:toDegrees="135"
            android:pivotX="50%"
            android:pivotY="50%" >
            <shape
                android:shape="line" >
                <stroke
                    android:width="2dp"
                    android:color="@color/pen_red" />
            </shape>
        </rotate>
    </item>
    <item>
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="50%"
            android:pivotY="50%" >
            <shape
                android:shape="line" >
                <stroke
                    android:width="2dp"
                    android:color="@color/pen_red" />
            </shape>
        </rotate>
    </item>

</layer-list>